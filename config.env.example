# WhatsApp Cloud API Configuration
# Copy this file to cloud-api-config.env and fill in your actual values

# Your WhatsApp Cloud API Access Token
ACCESS_TOKEN=your_access_token_here

# Your Phone Number ID from Facebook Business Manager
PHONE_NUMBER_ID=your_phone_number_id_here

# Your WhatsApp Business Account ID
WABA_ID=your_waba_id_here

# App Secret for webhook signature verification (optional but recommended)
APP_SECRET=your_app_secret_here

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=my_webhook_verify_token_123
WEBHOOK_PORT=3000

# Your business phone number (for reference)
BUSINESS_PHONE=+1234567890
